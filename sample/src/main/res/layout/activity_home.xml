<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/home_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/im_cat"/>

        <TextView
            android:id="@+id/pixel_perfect_correct_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="110dp"
            android:text="@string/pixel_perfect"
            android:textColor="@color/white"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/pixel_perfect_incorrect_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="112dp"
            android:text="@string/pixel_perfect"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:visibility="invisible"/>
    </FrameLayout>

    <Button
        android:id="@+id/pixel_perfect_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="@string/button_show"/>

    <LinearLayout
        android:id="@+id/pixel_perfect_permission_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/permission_text"/>

        <TextView
            android:id="@+id/pixel_perfect_go_to_settings_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/button_go_to_settings"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:onClick="openPermissionSettings"/>
    </LinearLayout>
</LinearLayout>
