<?xml version="1.0" encoding="utf-8"?>
<is.handsome.pixelperfectsample.library.ui.PixelPerfectLayout
    android:id="@+id/home_pixel_perfect_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pixel Perfect Tool"
            android:textSize="20sp"
            tools:ignore="HardcodedText"/>

        <ToggleButton
            android:id="@+id/home_open_pixel_perfect_button"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:onClick="changePixelPerfectState"/>

        <Button
            android:id="@+id/home_open_activity_button"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:onClick="startSecondActivity"
            android:text="Open Activity"
            tools:ignore="HardcodedText"/>
    </LinearLayout>

</is.handsome.pixelperfectsample.library.ui.PixelPerfectLayout>